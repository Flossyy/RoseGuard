<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="RoseGuard.Controls.HoverButton"
    x:Name="Root"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Button
        x:Name="InnerButton"
        Text="{Binding Text, Source={x:Reference Root}}"
        Command="{Binding Command, Source={x:Reference Root}}"
        CommandParameter="{Binding CommandParameter, Source={x:Reference Root}}"
        CornerRadius="8"
        Padding="12,6"
        BackgroundColor="#3A7AFE"
        TextColor="White"
        FontSize="16">

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">

                    <!-- Default / normal look -->
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#3A7AFE" />
                            <Setter Property="Scale" Value="1" />
                        </VisualState.Setters>
                    </VisualState>

                    <!-- Hover (desktop/mouse only) -->
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#5A91FF" />
                            <Setter Property="Scale" Value="1.03" />
                        </VisualState.Setters>
                    </VisualState>

                    <!-- Pressed -->
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#2F63D4" />
                            <Setter Property="Scale" Value="0.97" />
                        </VisualState.Setters>
                    </VisualState>

                    <!-- Disabled (optional) -->
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#A0B9FF" />
                            <Setter Property="Opacity" Value="0.6" />
                        </VisualState.Setters>
                    </VisualState>

                </VisualStateGroup>
            </VisualStateGroupList>
        </VisualStateManager.VisualStateGroups>
    </Button>
</ContentView>
